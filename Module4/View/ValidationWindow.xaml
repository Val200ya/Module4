<Window x:Class="Module4.View.ValidationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module4.View"
        mc:Ignorable="d"
        Title="Валидация данных" Height="350" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="300"
                Height="50"
                Content="Получить данные"
                FontSize="18"
                Cursor="Hand"
                Click="GetDataButtonClick"/>

        <Button VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="300"
                Height="50"
                Content="Отправить результат теста"
                FontSize="18"
                Cursor="Hand"
                Grid.Row="1"
                Click="SendResultClickButton"/>

        <TextBlock Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"
                   Name="DataTextBlock"/>

        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="18"
                   Name="ResultTextBlock"/>
    </Grid>
</Window>
